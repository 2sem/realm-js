{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rebuild Node Tests",
            "command": "npm",
            "args": [
                "run",
                "rebuild-changes"
            ],
            "options": {
                "env": {
                    "REALMJS_USE_DEBUG_CORE": "1"
                }
            },
            "type": "shell",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {
            "label": "Build Node Tests",
            "command": "npm",
            "args": [
                "run",
                "build-changes"
            ],
            "options": {
                "env": {
                    "REALMJS_USE_DEBUG_CORE": "1"
                }
            },
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build",
        },
        {
            "label": "Download and Start Server",
            "command": "${workspaceRoot}/scripts/download_and_start_server.sh",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
        }
    ]
}