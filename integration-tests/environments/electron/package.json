{
  "name": "realm-electron-tests",
  "description": "Test harness running the Realm JS tests in the Electron renderer process.",
  "version": "0.1.0",
  "author": {
    "name": "Realm",
    "email": "help@realm.io",
    "url": "https://realm.io"
  },
  "private": true,
  "main": "app/main.js",
  "scripts": {
    "postinstall": "npm install ../../realm-integration-tests.tgz ../../realm.tgz --no-save --build-from-source=realm --realm_enable_sync",
    "update-tests": "npm run tests/pack --prefix ../.. && npm install ../../realm-integration-tests.tgz --no-save",
    "package": "node ../peer-deps-as-deps.js -- electron-builder --dir",
    "start": "electron ./app/main.js",
    "test": "npm run test/main && npm run test/renderer",
    "test/main": "node runner.js main",
    "test/renderer": "node runner.js renderer"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "mocha": "^5.2.0",
    "mocha-remote-client": "^0.16.0",
    "ws": "^6.1.3"
  },
  "peerDependencies": {
    "realm": "*",
    "realm-integration-tests": "*"
  },
  "devDependencies": {
    "command-line-args": "^4.0.6",
    "decompress": "^4.2.0",
    "electron": "^8.1.1",
    "electron-builder": "^22.3.2",
    "https-proxy-agent": "^2.2.3",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-remote-cli": "^0.16.0",
    "mocha-remote-server": "^0.16.0",
    "node-gyp": "^5.0.1",
    "node-pre-gyp": "^0.10.3"
  },
  "build": {
    "appId": "io.realm.realm-js.electron-tests",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "./app/**/*",
      "./node_modules/**/*",
      "./package.json",
      "!node_modules/realm/android${/*}",
      "!node_modules/realm/build${/*}",
      "!node_modules/realm/react-native${/*}",
      "!node_modules/realm/scripts${/*}",
      "!node_modules/realm/src${/*}",
      "!node_modules/realm/vendor${/*}"
    ]
  }
}
