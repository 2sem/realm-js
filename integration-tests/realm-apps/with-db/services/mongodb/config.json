{
  "name": "mongodb",
  "type": "mongodb-atlas",
  "config": {
    "clusterName": "Cluster0",
    "readPreference": "primary",
    "wireProtocolEnabled": false,
    "sync": {
      "state": "enabled",
      "database_name": "test-database",
      "partition": {
        "key": "partition",
        "type": "string",
        "required": true,
        "permissions": {
          "read": true,
          "write": true
        }
      }
    }
  },
  "secret_config": {
    "uri": "local-mongodb-uri"
  }
}
