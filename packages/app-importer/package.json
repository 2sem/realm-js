{
  "name": "@realm/app-importer",
  "version": "0.1.0",
  "description": "Wrapping the App Services Admin API, to provide cross-platform app importing",
  "type": "module",
  "main": "./dist/bundle.es.js",
  "types": "./dist/index.d.ts",
  "react-native": "./dist/bundle.react-native.es.js",
  "scripts": {
    "test": "wireit",
    "build": "wireit",
    "autorest:generate": "wireit",
    "lint": "eslint --ext .js,.ts ."
  },
  "wireit": {
    "test": {
      "command": "mocha",
      "dependencies": ["build"]
    },
    "build": {
      "command": "rollup --config",
      "files": ["rollup.config.mjs", "src/**/*.ts", "src/**/tsconfig.json"],
      "output": ["dist/**/*.js", "dist/**/*.d.ts"],
      "dependencies": [
        "generate-types",
        "autorest:generate",
        "../realm-network-transport:build"
      ]
    },
    "generate-types": {
      "command": "tsc --project tsconfig.types.json",
      "files": ["src/**/*.ts"],
      "output": ["types/generated/**/*.d.ts"],
      "dependencies": [
        "autorest:generate",
        "../realm-network-transport:build"
      ]
    },
    "autorest:generate": {
      "command": "autorest src/api/autorest.yaml",
      "files": ["src/api/*.yaml"],
      "output": ["src/api/generated"]
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "author": {
    "name": "Realm",
    "email": "help@realm.io",
    "url": "https://realm.io"
  },
  "contributors": [
    "Kr√¶n Hansen <kraen.hansen@mongodb.com> (https://github.com/kraenhansen)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/realm/realm-js.git",
    "directory": "packages/app-importer"
  },
  "bugs": {
    "url": "https://github.com/realm/realm-js/issues"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@azure/core-auth": "^1.4.0",
    "@azure/core-client": "^1.7.2",
    "@azure/core-rest-pipeline": "^1.10.2",
    "@realm/network-transport": "*",
    "body-parser": "^1.20.1",
    "chalk": "^4.1.2",
    "deepmerge": "^4.2.2",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "node-fetch": "^3.2.10",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/body-parser": "^1.19.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/node": "^18",
    "@types/node-fetch": "^2.6.2",
    "@types/yargs": "^17.0.13",
    "autorest": "^3.6.3",
    "mocha": "^10.1.0",
    "rollup": "^3.2.5",
    "rollup-plugin-dts": "^5.0.0"
  }
}
