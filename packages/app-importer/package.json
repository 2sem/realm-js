{
  "name": "@realm/app-importer",
  "version": "0.1.0",
  "description": "Wrapping the App Services Admin API, to provide cross-platform app importing",
  "type": "module",
  "main": "./dist/bundle.es.js",
  "types": "./dist/index.d.ts",
  "react-native": "./dist/bundle.react-native.es.js",
  "scripts": {
    "test": "wireit",
    "build": "wireit",
    "openapi:generate": "wireit",
    "openapi:link": "wireit",
    "lint": "eslint --ext .js,.ts ."
  },
  "wireit": {
    "test": {
      "command": "mocha",
      "dependencies": ["build"]
    },
    "build": {
      "command": "rollup --config",
      "files": ["rollup.config.mjs", "src/**/*.ts", "src/**/tsconfig.json"],
      "output": ["dist/**/*.js", "dist/**/*.d.ts"],
      "dependencies": [
        "generate-types",
        "../realm-network-transport:build"
      ]
    },
    "generate-types": {
      "command": "tsc --project tsconfig.types.json",
      "files": ["src/**/*.ts"],
      "output": ["types/generated/**/*.d.ts"],
      "dependencies": [
        "openapi:generate",
        "../realm-network-transport:build"
      ]
    },
    "openapi:clone": {
      "command": "git clone --branch parameter-components git@github.com:kraenhansen/openapi-typescript-codegen.git || echo 'Already cloned'",
      "files": ["./openapi-typescript-codegen/src"],
      "output": []
    },
    "openapi:install": {
      "command": "npm install --prefix openapi-typescript-codegen",
      "dependencies": ["openapi:clone"],
      "files": ["./openapi-typescript-codegen/package-lock.json"],
      "output": []
    },
    "openapi:build": {
      "command": "npm run build --prefix openapi-typescript-codegen",
      "dependencies": ["openapi:install"],
      "files": ["./openapi-typescript-codegen/src"],
      "output": ["./openapi-typescript-codegen/dist"]
    },
    "openapi:link": {
      "command": "ln -nsf ../openapi-typescript-codegen node_modules/openapi-typescript-codegen",
      "dependencies": ["openapi:build"],
      "files": ["./openapi-typescript-codegen/dist"],
      "output": []
    },
    "openapi:generate": {
      "command": "openapi --useUnionTypes --input ./src/api/openapi-admin-v3.yaml --output ./src/api/generated --request ./src/api/request-patch.ts",
      "dependencies": ["openapi:link"],
      "files": ["./src/api/openapi-admin-v3.yaml", "./src/api/request-patch.ts"],
      "output": ["./src/api/generated"]
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "author": {
    "name": "Realm",
    "email": "help@realm.io",
    "url": "https://realm.io"
  },
  "contributors": [
    "Kr√¶n Hansen <kraen.hansen@mongodb.com> (https://github.com/kraenhansen)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/realm/realm-js.git",
    "directory": "packages/app-importer"
  },
  "bugs": {
    "url": "https://github.com/realm/realm-js/issues"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@realm/network-transport": "*",
    "body-parser": "^1.20.1",
    "chalk": "^4.1.2",
    "deepmerge": "^4.2.2",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "node-fetch": "^3.2.10",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/body-parser": "^1.19.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/node": "^18",
    "@types/node-fetch": "^2.6.2",
    "@types/yargs": "^17.0.13",
    "mocha": "^10.1.0",
    "rollup": "^3.2.5",
    "rollup-plugin-dts": "^5.0.0"
  }
}
