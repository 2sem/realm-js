{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "es2018",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"noResolve": true,
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		"types": [
			"bson",
			"strict-event-emitter-types"
		],
		"lib": [
			"ES2018",
			"ES2018.AsyncIterable"
		]
	},
	"include": [
		"src/**/*.ts",
		"types/index.d.ts",
		"types/generated/app.d.ts"
	],
	"exclude": []
}